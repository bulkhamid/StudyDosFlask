    "item": [
      {
        "name": "Study Plan Request",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"query\": \"I need a 10-day study plan for Artificial Intelligence starting from 2025-03-01.\",\n  \"course_material\": \"Optional course material if available.\"\n}"
          },
          "url": {
            "raw": "http://127.0.0.1:8000/assistant",
            "protocol": "http",
            "host": ["127", "0", "0", "1"],
            "port": "8000",
            "path": ["assistant"]
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "type": "text/javascript",
              "exec": [
                "pm.test(\"Status code is 200\", function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test(\"Response contains 'Day 1:'\", function () {",
                "    var jsonData = pm.response.json();",
                "    pm.expect(jsonData.response).to.include(\"Day 1:\");",
                "});"
              ]
            }
          }
        ]
      },
      {
        "name": "Assignment Hint Request",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"query\": \"Can you give me a hint on how to approach the assignment on neural networks?\",\n  \"course_material\": \"Optional course material if available.\"\n}"
          },
          "url": {
            "raw": "http://127.0.0.1:8000/assistant",
            "protocol": "http",
            "host": ["127", "0", "0", "1"],
            "port": "8000",
            "path": ["assistant"]
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "type": "text/javascript",
              "exec": [
                "pm.test(\"Status code is 200\", function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test(\"Response contains a hint\", function () {",
                "    var jsonData = pm.response.json();",
                "    var text = jsonData.response.toLowerCase();",
                "    pm.expect(text).to.satisfy(function(val) {",
                "        return val.includes(\"consider reviewing\") || val.includes(\"breaking the problem\");",
                "    });",
                "});"
              ]
            }
          }
        ]
      },
